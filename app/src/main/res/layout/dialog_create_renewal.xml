<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="16dp"
    app:cardElevation="20dp"
    app:cardBackgroundColor="@color/green10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Recommendation services unavailable!"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:fontFamily="@font/oxygen_bold"
            android:textAlignment="center"
            android:layout_margin="8dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:text="Dear user, your list of offers is empty."
            android:textColor="@color/black"
            android:textAlignment="viewStart"
            android:layout_margin="8dp"/>

        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnNavigateToCreateOffer"
            android:text="Okay"
            android:background="@drawable/button_custom_one"
            android:layout_gravity="center"
            android:layout_margin="8dp"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>